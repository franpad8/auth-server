    "passport-google-oauth2": "^0.2.0"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "standard": "^14.3.4"
  }
